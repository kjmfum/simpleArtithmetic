<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DivisionMain">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@color/white"
            android:src="@drawable/simplemathicon" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@color/white"
            android:src="@drawable/ic_divisionicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="10">


            <TextView
               android:id="@+id/tvDivisor"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="CHOOSE DIVISOR (SCROLL)" />

            <TextView
                android:id="@+id/tvRange"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="CHOOSE RANGE (SCROLL)" />


        </LinearLayout>



    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/Horguideline20"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Verguideline50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt0to9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt10to20"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt20to30"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt30to40"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt40to50"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt0to7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt0to8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt0to91"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt0to10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="10"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt0to11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="11"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt0to12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="12"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/Horguideline20"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="@id/Verguideline50"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/rangeBbt0to7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-100"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt0to9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-200"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt10to20"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-300"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt20to30"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-400"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt30to40"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-500"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt40to50"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-1000"
                android:textSize="20sp" />



            <Button
                android:id="@+id/rangeBt0to8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1-2000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt0to91"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="100-500"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt0to10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="500-1000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt0to11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="1000-2000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rangeBt0to12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:onClick="getRangeFromButton"
                android:padding="10dp"
                android:text="2000-5000"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/AdUnitBannerID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Horguideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Verguideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>