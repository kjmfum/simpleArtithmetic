<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/simplemathicon"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />


    <Button
        android:id="@+id/btNoAds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/cardview_default_elevation"
        android:shadowColor="@color/black"
        android:text="Premium\n No Ads"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor30"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />


    <Button
        android:id="@+id/btAddition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="goToAritmetic"
        android:text="ADDITION"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor50"
        app:layout_constraintEnd_toEndOf="@id/guidelineVer50"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineHor35" />

    <Button
        android:id="@+id/btSubtraction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="goToAritmetic"
        android:text="SUBTRACTION"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guidelineVer50"
        app:layout_constraintTop_toBottomOf="@id/guidelineHor35" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />


    <Button
        android:id="@+id/btMultiplication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="goToAritmetic"
        android:text="MULTIPLICATION"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor65"
        app:layout_constraintEnd_toEndOf="@id/guidelineVer50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineHor50"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/btDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="goToAritmetic"
        android:text="DIVISION"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineVer50"
        app:layout_constraintTop_toBottomOf="@id/guidelineHor50" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <Button
        android:id="@+id/btListenMultiplicationTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="goToAritmetic"
        android:text="LISTEN TO AUDIO OF MULTIPLICATION TABLE"
        android:textColor="@color/black"
        android:background="@color/colorGreen"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/guidelineHor75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineHor65"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHor75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVer50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintGuide_percent="0.5" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/AdUnitBannerID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>